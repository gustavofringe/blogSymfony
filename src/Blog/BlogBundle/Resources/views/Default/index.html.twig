{% extends "BlogBlogBundle::layout.html.twig" %}
{% block body %}
<h1>title</h1>
{% for product in products %}
<div class="card">
  <h3 class="card-header">{{ product.title }}</h3>
  <div class="card-block">
    <h4 class="card-title">Special title treatment</h4>
    <p class="card-text">{{ product.content | slice(0,50,'...')}}...</p>
    <a href="{{ path('blog_view',{'id':product.id})}}" class="btn btn-primary">Lire la suite</a>
  </div>
</div>
{% endfor %}
{% endblock %}
